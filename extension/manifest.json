{
  "manifest_version": 3,
  "name": "Dealink - Smart Price Comparison",
  "version": "1.1.0",
  "description": "Find the same product cheaper across 50+ global stores. Automatic price comparison on Amazon, eBay, Walmart, Best Buy & more â€” worldwide.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.es/*",
    "*://*.amazon.it/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.co.il/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.co.jp/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "*://*.ebay.de/*",
    "*://*.ebay.fr/*",
    "*://*.ebay.es/*",
    "*://*.ebay.it/*",
    "*://*.ebay.ca/*",
    "*://*.ebay.com.au/*",
    "*://*.walmart.com/*",
    "*://*.walmart.ca/*",
    "*://*.bestbuy.com/*",
    "*://*.bestbuy.ca/*",
    "*://*.target.com/*",
    "*://*.target.com.au/*",
    "*://*.newegg.com/*",
    "*://*.newegg.ca/*",
    "*://*.aliexpress.com/*",
    "*://*.ksp.co.il/*",
    "*://*.ivory.co.il/*",
    "*://*.bug.co.il/*",
    "*://*.currys.co.uk/*",
    "*://*.argos.co.uk/*",
    "*://*.otto.de/*",
    "*://*.mediamarkt.de/*",
    "*://*.bol.com/*",
    "*://*.coolblue.nl/*",
    "*://*.coolblue.be/*",
    "*://*.cdiscount.com/*",
    "*://*.conrad.de/*",
    "*://*.jbhifi.com.au/*",
    "*://*.flipkart.com/*",
    "*://*.mercadolibre.com.mx/*",
    "*://*.mercadolibre.com.ar/*",
    "*://*.mercadolibre.com.br/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.es/*",
        "*://*.amazon.it/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.co.il/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.co.jp/*",
        "*://*.ebay.com/*",
        "*://*.ebay.co.uk/*",
        "*://*.ebay.de/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.es/*",
        "*://*.ebay.it/*",
        "*://*.ebay.ca/*",
        "*://*.ebay.com.au/*",
        "*://*.walmart.com/*",
        "*://*.walmart.ca/*",
        "*://*.bestbuy.com/*",
        "*://*.bestbuy.ca/*",
        "*://*.target.com/*",
        "*://*.target.com.au/*",
        "*://*.newegg.com/*",
        "*://*.newegg.ca/*",
        "*://*.aliexpress.com/*",
        "*://*.ksp.co.il/*",
        "*://*.ivory.co.il/*",
        "*://*.bug.co.il/*",
        "*://*.currys.co.uk/*",
        "*://*.argos.co.uk/*",
        "*://*.otto.de/*",
        "*://*.mediamarkt.de/*",
        "*://*.bol.com/*",
        "*://*.coolblue.nl/*",
        "*://*.coolblue.be/*",
        "*://*.cdiscount.com/*",
        "*://*.conrad.de/*",
        "*://*.jbhifi.com.au/*",
        "*://*.flipkart.com/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.ar/*",
        "*://*.mercadolibre.com.br/*"
      ],
      "js": ["analytics.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
